<%= @game.player_2.name %>: <%= @game.player_2.hit_points %>HP</br>

<% if @game.current_turn == @game.player_1 %>
  <%= @game.player_1.name %> attacked <%= @game.player_2.name %></br>
<% else %>
  <%= @game.player_2.name %> attacked <%= @game.player_1.name %></br>
<% end %>

<form action='switch-turns' method="post">
  <input type="submit" value="OK">
</form>
